!!! 5
%html{lang: 'en'}
  %head
    %meta(charset="utf-8")
    %meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")
    %title= current_page.data.title || "Riak Ruby Client"
    = stylesheet_link_tag "normalize", "all"
    = javascript_include_tag  "all"

  %body{class: page_classes}
    %header
      = partial 'nav'
    .content
      %h1.title= current_page.data.title
      #toc
      #yielded= yield
    %footer
      Documentation generated at #{Time.now.utc} from repo version #{`git rev-list -n 1 HEAD`.chomp}.
